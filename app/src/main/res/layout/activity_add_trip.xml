<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hyun.triptap.AddTripActivity">

    <TextView
        android:id="@+id/text_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="77dp"
        android:text="From"
        android:layout_below="@+id/text_destination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="To:"
        android:layout_below="@+id/edit_from"
        android:layout_alignLeft="@+id/text_from"
        android:layout_alignStart="@+id/text_from" />

    <EditText
        android:id="@+id/edit_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:inputType="date"
        android:hint="mm/dd/yy"
        android:layout_below="@+id/text_from"
        android:layout_toRightOf="@+id/text_from"
        android:layout_toEndOf="@+id/text_from" />

    <EditText
        android:id="@+id/edit_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_to"
        android:layout_alignBottom="@+id/text_to"
        android:layout_alignLeft="@+id/edit_from"
        android:layout_alignStart="@+id/edit_from"
        android:ems="10"
        android:inputType="date"
        android:hint="mm/dd/yy"/>

    <TextView
        android:id="@+id/text_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/edit_to"
        android:layout_toStartOf="@+id/edit_to" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edit_from"
        android:layout_marginBottom="46dp"
        android:layout_below="@+id/text_destination" />

</RelativeLayout>
